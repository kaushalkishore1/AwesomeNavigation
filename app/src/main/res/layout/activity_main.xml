<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.k2infosoft.k2navigation.FantasyDrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fake" />

        <com.k2infosoft.k2navigation.SideBar
            android:id="@+id/leftSideBar"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            app:maxTranslationX="66dp">

            <LinearLayout
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:orientation="vertical">

                <com.k2infosoft.awesomenavigation.widget.CircleImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/kaushal"
                    app:civ_border_color="@color/menu_text_color"
                    app:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kaushal kishore"
                    android:textColor="@color/menu_text_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_camera_black_24dp"
                android:text="Camera" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:text="SliderShow" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_assistant_black_24dp"
                android:text="Share" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_assistant_black_24dp"
                android:text="Send" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/ic_menu_slideshow"
                android:text="Setting" />
        </com.k2infosoft.k2navigation.SideBar>

        <com.k2infosoft.k2navigation.SideBar
            android:id="@+id/rightSideBar"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/bg_right_bar"
            android:gravity="center_vertical|right"
            app:maxTranslationX="-33dp">

            <TextView
                style="@style/MenuText"
                android:text="Camera" />

            <TextView
                style="@style/MenuText"
                android:text="SlideShow" />

            <TextView
                style="@style/MenuText"
                android:text="Share" />

            <TextView
                style="@style/MenuText"
                android:text="Send" />

            <TextView
                style="@style/MenuText"
                android:text="Review" />

            <TextView
                style="@style/MenuText"
                android:text="Gallery" />

            <TextView
                style="@style/MenuText"
                android:text="Login" />
        </com.k2infosoft.k2navigation.SideBar>
    </com.k2infosoft.k2navigation.FantasyDrawerLayout>

    <TextView
        android:id="@+id/tipView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:visibility="invisible" />
</RelativeLayout>
